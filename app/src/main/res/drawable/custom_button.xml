<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#00796B"
                android:startColor="#00796B"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#00796B"
                android:startColor="#00796B"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="#009688"
                android:startColor="#009688"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp"/>
        </shape>
    </item>
</selector>