<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_teal_800"
                android:startColor="@color/md_teal_800"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_teal_800"
                android:startColor="@color/md_teal_800"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="270"
                android:endColor="@color/md_teal_700"
                android:startColor="@color/md_teal_700"/>
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent"/>
            <corners
                android:radius="3dp"/>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp"/>
        </shape>
    </item>
</selector>